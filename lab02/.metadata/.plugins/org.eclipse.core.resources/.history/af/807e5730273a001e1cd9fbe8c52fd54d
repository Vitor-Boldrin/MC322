package pessoa;

import Emprestimos.Emprestimo;
import Reservas.Reserva;
import java.util.Calendar;

public class Estudante {

	// Atributos da classe
	private String ra;
	private String curso;
	private short max_emprestimos;
	private short num_emprestimos;
	private Emprestimo[] livros_emprestados;
	private short max_reservas;
	private short num_reservas;
	private Reserva[] livros_reservados;
	private Calendar data_final_castigo;
	
	// Construtor da Classe
	public Estudante(String ra, String curso) {
		this.ra = ra;
		this.curso = curso;
		this.data_final_castigo = null; //Estudante construido sem castigo
		this.max_emprestimos = 5; //Padrão para todos estudantes (por enquanto)
		this.num_emprestimos = 0;
		this.max_reservas = 3;
		this.num_reservas = 0;
	}
	
	// Métodos
	public void adiciona_emprestimo(Emprestimo emprestimo) {
		
	}
	
	// Gatters e Setters
	public String getRa() {
		return this.ra;
	}
	
	public String getCurso() {
		return this.curso;
	}
	
	public void setRa(String ra) {
		this.ra = ra;
	}
	
	public void setSalario(String curso) {
		this.curso = curso;
	}
	
	public Emprestimo[] getLivros_emprestados() {
		return this.livros_emprestados;
	}
	
	public Reserva[] getLivros_reservados() {
		return this.livros_reservados;
	}
}
